[user]
  name = Anna Cruz
  email = anna.cruz@gmail.com
[core]
    editor = nvim
    excludesfile = ~/.config/git/gitignore_global
    pager = delta
[commit]
    template = ~/.config/git/git_commit_message_template
[push]
    default = current
[pull]
    default = current
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    dark = true
[merge]
    conflicstyle = zdiff3
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = yellow
    untracked = red
[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    amend = commit --amend --no-edit
    pf = push --force-with-lease
    wip = commit -m 'wip'
